@model UserManagement.Models.User
<div style="max-width: 600px; margin: auto; padding: 20px; border: 1px solid #ddd; border-radius: 5px; background-color: #f9f9f9;">
    <style>
        /* Sidebar Styling */
        .sidebar {
            position: fixed;
            top: 50%;
            left: 20px;
            transform: translateY(-50%);
            background-color: #f4f4f4;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            /* Button Styling */
            .sidebar button {
                width: 200px;
                background-color: #008CBA;
                color: white;
                border: none;
                padding: 10px;
                border-radius: 5px;
                cursor: pointer;
                font-size: 16px;
            }

                .sidebar button:hover {
                    opacity: 0.9;
                    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
                }
    </style>

    <div class="sidebar">
        <form method="get" action="/User/Index">
            <button type="submit">Back to Home</button>
        </form>
    </div>


    <h2>Create New User</h2>

    <!-- Sidebar -->

    <form method="post" asp-action="CreatePost">
        <!-- First Name -->
        <div style="margin-bottom: 10px;">
            <label asp-for="Data.FirstName">First Name:</label><br />
            <input asp-for="Data.FirstName" maxlength="10" class="form-control" pattern="[A-Za-z0-9]*"
                   style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
            <span asp-validation-for="Data.FirstName" style="color: red;"></span>
        </div>

        <!-- Last Name -->
        <div style="margin-bottom: 10px;">
            <label asp-for="Data.LastName">Last Name:</label><br />
            <input asp-for="Data.LastName" maxlength="10" class="form-control" pattern="[A-Za-z0-9]*"
                   style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
            <span asp-validation-for="Data.LastName" style="color: red;"></span>
        </div>

        <!-- Username -->
        <div style="margin-bottom: 10px;">
            <label asp-for="UserName">Username:</label><br />
            <input asp-for="UserName" maxlength="10" class="form-control" pattern="[A-Za-z0-9]*"
                   style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
            <span asp-validation-for="UserName" style="color: red;"></span>
        </div>

        <!-- Password -->
        <div style="margin-bottom: 10px;">
            <label asp-for="Password">Password:</label><br />
            <input asp-for="Password" type="password" maxlength="10" class="form-control" pattern="[A-Za-z0-9]*"
                   style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
            <span asp-validation-for="Password" style="color: red;"></span>
        </div>

        <!-- Phone -->
        <div style="margin-bottom: 10px;">
            <label asp-for="Data.Phone">Phone:</label><br />
            <input asp-for="Data.Phone" maxlength="10" class="form-control" pattern="[0-9]*"
                   style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
            <span asp-validation-for="Data.Phone" style="color: red;"></span>
        </div>

        <!-- Email -->
        <div style="margin-bottom: 10px;">
            <label asp-for="Data.Email">Email:</label><br />
            <input asp-for="Data.Email" type="email" class="form-control"
                   style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
            <span asp-validation-for="Data.Email" style="color: red;"></span>
        </div>

        <!-- Active Status -->
        <div style="margin-bottom: 10px;">
            <label asp-for="Active">Is Active:</label><br />
            <input asp-for="Active" type="checkbox" class="form-check-input" />
        </div>

        <!-- User Group ID -->
        <div style="margin-bottom: 10px;">
            <label asp-for="UserGroupId">User Group ID:</label><br />
            <input asp-for="UserGroupId" type="number" class="form-control"
                   style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
            <span asp-validation-for="UserGroupId" style="color: red;"></span>
        </div>

        <!-- Creation Date -->
        <input type="hidden" asp-for="Data.CreationDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" />


        <!-- Submit Button -->
        <button type="submit" style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 5px; cursor: pointer;">
            Create User
        </button>
    </form>
</div>
